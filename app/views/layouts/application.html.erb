<!DOCTYPE html>
<html>
  <head>
    
    <title>Restaurant2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  </head>

  <body style="background-color: #E6F3F9">
    
    
    <!--navbar-->
    
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <span class="navbar-text">
            <% if session[:user_id].present? %>
              <h5 class="navbar-brand">Hi, <%= Customer.find(session[:user_id]).name %></h5>
            <% end %> 
          </span>
        </div>
      
          <ul class="nav navbar-nav">
            <% if flash[:alert].present? %>
              <li class="alert_message">
                <%= flash[:alert] %>
              </li>
            <% end %>
    
            <% if flash[:notice].present? %>
              <li class="alert_notice">
                <%= flash[:notice] %>
              </li>
            <% end %>
          </ul>
      
          <ul class="nav navbar-nav navbar-right">
            <% if session[:user_id].present? %>
            <li>
              <%= link_to "logout", "/logout", data: { method: :delete } %>
            </li>
            <% end %>
          </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>